<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xyz.ilyaxabibullin.onlinestore">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/ic_local_grocery_store_black_24dp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".view.splash.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.register.RegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.product.ProductActivity"
            android:label="ProductName" />
        <activity android:name=".view.shop.ShopActivity" />
        <activity android:name=".view.product_list.ProductListActivity" />
        <activity android:name=".view.shop.create_shop.CreateShopActivity" />
        <activity android:name=".view.login.LoginActivity" />
        <activity android:name=".view.addproduct.AddProductActivity" />
        <activity android:name=".OrderActivity" />
        <activity android:name=".view.cart.CartActivity"
            android:label="cart"></activity>
        <activity android:name=".view.userinfo.UserInfoActivity"></activity>
    </application>

</manifest>